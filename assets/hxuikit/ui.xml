<?xml version="1.0" encoding="UTF-8"?>
<ui>
	<ComponentTemplates>
		<ComponentTemplate templateName="BasicButton">
			<type>com.studfarm.hxuikit.components.HxButton</type>
			<label>SuperTeppo ostaa mopedin ehka huomenna moi moi moi</label>
			<labelFont>assets/hxuikit/Impact.ttf</labelFont>
			<labelColor>ffffff</labelColor>
			<fontSize>20</fontSize>
			<stretch>horizontal</stretch>
			<textAlignHorizontal>center</textAlignHorizontal>
			<textAlignVertical>center</textAlignVertical>
			<minWidth>80</minWidth>
			<minHeight>50</minHeight>
		</ComponentTemplate>		
	</ComponentTemplates>
	
	<Layouts>
		<Layout name="MainLayout">
			<Component id="MainContainer">
				<target>maincontainer</target>
				<type>com.studfarm.hxuikit.components.HxContainer</type>
				<stretch>vertical,horizontal</stretch>
				<anchor>left,right,top,bottom</anchor>
				
				<Components>
					<Component id="TeppoButton" template="BasicButton">
						<target>maincontainer.button1</target>
						<label>Teppo on kova</label>
						<anchor>left,top</anchor>
						<textAlignHorizontal>left</textAlignHorizontal>
					</Component>
					
					<Component id="SuperTeppoButton" template="BasicButton">
						<target>maincontainer.button2</target>
						<label>SuperTeppo ostaa mopedin ehka huomenna moi moi moi</label>
						<labelColor>00ffff</labelColor>
						<fontSize>15</fontSize>
						<anchor>left,right,bottom</anchor>
					</Component>
					
					<Component id="CenterLabel">
						<target>maincontainer.centerlabel</target>
						<type>com.studfarm.hxuikit.components.HxLabel</type>
						<label>Laapeli</label>
						<anchor>right,top</anchor>
						<labelFont>assets/hxuikit/Impact.ttf</labelFont>
						<labelColor>ffffff</labelColor>
						<stretch>horizontal</stretch>
						<fontSize>32</fontSize>
						<textAlignHorizontal>center</textAlignHorizontal>
						<textAlignVertical>center</textAlignVertical>
						<minHeight>50</minHeight>
					</Component>
					
					<Component id="PikachuImage">
						<target>maincontainer.pikachuimage</target>
						<type>com.studfarm.hxuikit.components.HxImage</type>
						<anchor>left,right,bottom</anchor>
						<stretch>horizontal,vertical</stretch>
						<imageAlignHorizontal>center</imageAlignHorizontal>
						<imageAlignVertical>center</imageAlignVertical>
						<keepImageAspectRatio>true</keepImageAspectRatio>
						<allowImageScaling>true</allowImageScaling>
					</Component>
					
					<Component id="TestImage">
						<target>maincontainer.testimage</target>
						<type>com.studfarm.hxuikit.components.HxImage</type>
						<stretch>horizontal,vertical</stretch>
						<imageAlignHorizontal>center</imageAlignHorizontal>
						<imageAlignVertical>center</imageAlignVertical>
						<keepImageAspectRatio>true</keepImageAspectRatio>
						<allowImageScaling>true</allowImageScaling>
						<minWidth>200</minWidth>
					</Component>
				</Components>
			</Component>
		</Layout>
	</Layouts>	
</ui>